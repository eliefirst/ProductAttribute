<?php
/**
 * Custom Product Attribute Template
 *
 * @var $block \Magento\Framework\View\Element\Template
 * @var $viewModel \Elie\ProductAttribute\ViewModel\ProductAttributes
 */

$viewModel = $block->getData('view_model');

if (!$viewModel->hasCustomAttributeData()) {
    return;
}
?>

<div class="product-custom-attribute" style="margin: 20px 0; padding: 15px; border: 1px solid #e0e0e0; border-radius: 5px; background-color: #f9f9f9;">
    <h3 style="margin-top: 0; color: #333; font-size: 18px; border-bottom: 2px solid #1979c3; padding-bottom: 10px;">
        <?= $block->escapeHtml(__('Custom Product Attribute')) ?>
    </h3>

    <div class="attribute-content" style="margin-top: 15px;">
        <?php if ($status = $viewModel->getProductElieStatus()): ?>
            <div class="attribute-row" style="margin-bottom: 10px;">
                <span class="attribute-label" style="font-weight: 600; color: #555; display: inline-block; width: 180px;">
                    <?= $block->escapeHtml(__('Product Elie Status')) ?>:
                </span>
                <span class="attribute-value" style="color: <?= $status === 'Enable' ? '#4caf50' : '#f44336' ?>; font-weight: 500;">
                    <?= $block->escapeHtml($status) ?>
                </span>
            </div>
        <?php endif; ?>

        <?php if ($attributeValue = $viewModel->getProductElieAttributeValue()): ?>
            <div class="attribute-row" style="margin-bottom: 10px;">
                <span class="attribute-label" style="font-weight: 600; color: #555; display: inline-block; width: 180px;">
                    <?= $block->escapeHtml(__('Product Elie Attribute Value')) ?>:
                </span>
                <span class="attribute-value" style="color: #333;">
                    <?= $block->escapeHtml($attributeValue) ?>
                </span>
            </div>
        <?php endif; ?>
    </div>
</div>
