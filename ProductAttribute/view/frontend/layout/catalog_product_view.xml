<?xml version="1.0"?>
<!--
/**
 * Product View Layout - Display custom attributes and Google Shopping data
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.main">
            <!-- Custom Product Attribute Block -->
            <block class="Magento\Framework\View\Element\Template"
                   name="product.info.custom.attribute"
                   template="Elie_ProductAttribute::product/view/custom_attribute.phtml"
                   after="product.info.price">
                <arguments>
                    <argument name="view_model" xsi:type="object">Elie\ProductAttribute\ViewModel\ProductAttributes</argument>
                </arguments>
            </block>

            <!-- Brand-Gtin-Gender Block -->
            <block class="Magento\Framework\View\Element\Template"
                   name="product.info.google.shopping"
                   template="Elie_ProductAttribute::product/view/google_shopping.phtml"
                   after="product.info.custom.attribute">
                <arguments>
                    <argument name="view_model" xsi:type="object">Elie\ProductAttribute\ViewModel\ProductAttributes</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
